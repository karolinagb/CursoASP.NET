@model SalesWebMVC.Models.Seller

@{ 
    ViewData["Title"]= "Create";
}

<h3>@ViewData["Title"]</h3>

<h4>Seller</h4>

<hr />

<!--Row garante que o div ocupe a largura da tela:-->
<div class="row">

    <div class="col-md-4">

        <!--Essa ação create não é a que criamos, mas a do método post que vamos criar ainda:-->
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>

    </div>

</div>